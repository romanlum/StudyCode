<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="swt6.orm.domain">
    <class name="Project">

        <id name="id" type="long">
            <generator class="native"/>
        </id>

        <property name="name"/>

        <many-to-one name="leader" lazy="false" class="Employee"  column="leader_id" not-null="true"/>

        <set name="members" lazy="false"
             table="ProjectEmployee"
             cascade="save-update">
        <key column="project_Id"/>
        <many-to-many
                class="Employee"
                column="employee_Id"/>
        </set>


        <set name="modules" inverse="true" lazy="false" fetch="join" cascade="all-delete-orphan">
            <key>
                <column name="project_id" not-null="true"/>
            </key>
            <one-to-many class="Module"/>
        </set>
    </class>
</hibernate-mapping>
